@model IEnumerable<ShoppingCart.Models.ItemMaster>

@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CheckOut</h1>

<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>            
            <th>
                @Html.Label("Quantity")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.Label("Total")
            </th>

        </tr>
    </thead>
    <tbody>        
        @foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
                <img src="@item.ImagePath" height="100" width="100" alt="Img" />
            </td>
			<td>
				@Html.DisplayFor(modelItem => item.Stock)
			</td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
			<td>
				@Html.DisplayFor(modelItem => item.Total)
			</td>
			<td>
                @Html.ActionLink("Remove", "Delete", new { id = item.ItemId })
			</td>
        </tr>
}
    </tbody>
</table>

<label> Grand Total :  </label>
<label> @ViewData["GrandTotal"] </label>
<br/>
@Html.ActionLink("Continue shopping", "Index", "Item", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Pay Now", "Payout", "Item", null, new { @class = "btn btn-danger" })